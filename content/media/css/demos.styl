@import "include/vars"
@import "include/fix"
@import "include/mixins"
@import "include/gradients"
@import "include/code"
@import "include/tabs.css"


p.intro
    clear both
    padding-top 12px

#hero
    height 220px
    margin 0 auto
    position relative
    z-index 0

section.blurb
    position relative
    z-index 1
    margin-top -32px
    border-top 1px solid almostwhite
    a.standalone
        margin -24px -24px 0px
        boxshadow(0, 1px, 0px, clear - 10)

    .tease.first
        margin-top 12px

    p
        margin 12px 0

a.standalone
    margin -12px 0 12px
    padding 4px 0
    display block
    text-align center
    color textgray
    clear both
    font-size 11px
    boxshadow(0, 1px, 0px, clear - 20)

    &:hover
        color darkPetrol
        whiteGradient()
        text-shadow 0 1px 1px #fff

#nav
    border-bottom 1px solid lightgray

nav
    margin-top  184px
    li
        margin-left 0
        a
            margin-left 0
            display inline-block

    ol.cat
        display none

        &.active
            display block

    div.sect
        div.icon
            smallicon()
            float left

        header
            cursor pointer
            padding-top 6px
            color petrol
            h2

                color inherit


        h2
            float left
            width 219px
            margin 0
            font-size 14px
            border 0
            letter-spacing 0
            margin-top -4px

        h3
            margin-top 12px
            margin-left 6px

        &.one
            div.icon
                smallplayericon()

        &.two
            div.icon
                smallflashicon()
        &.three
            div.icon
                smalljsicon()