#content
    .tab_nav
        margin 32px 0 24px
        boxshadow(0px, 2px, 0px, #ececec)
        ul
            clearfix()
            padding 0
            text-align center
            position relative
        li
            display inline-block
            margin 0
            padding 0
            line-height 11px

            a
                background-color #ededed
                boxshadow(1px, 0px, 1px, #ccc)
                margin 0
                margin-right 1px
                radiusTop(5px)
                padding 5px 20px
                display block
                font-size 11px
                font-weight normal

            &.active
                border-bottom 0
                position relative
                z-index 2000
                bottom -2px
                a
                    background-color clear
                    boxshadow(0px, -1px, 1px, #aaa)
                    color darkPetrol
                    margin 0 2px
